{
  "name": "squarebox",
  "version": "1.0.0",
  "description": "Module Bundler for Javascript ES6",
  "private": true,
  "bin": {
    "sqbox": "bin/sqbox"
  },
  "scripts": {
    "test": "_mocha --opts mocha.opts --watch test/commands",
    "it": "_mocha --opts mocha.opts test/integration",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=html --reporter=text mocha --opts mocha.opts test/commands",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "docs": "esdoc",
    "build": "node release"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": false
  },
  "files": [
    "bin",
    "lib",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "module",
    "bundler",
    "es6"
  ],
  "author": "Patricio Ferreira <3dimentionar@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.23.0",
    "babel-plugin-istanbul": "4.0.0",
    "babel-plugin-module-resolver": "2.5.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-stage-2": "6.22.0",
    "babel-register": "6.23.0",
    "chai": "3.5.0",
    "coveralls": "2.11.16",
    "cross-env": "3.1.4",
    "esdoc": "0.5.2",
    "esdoc-es7-plugin": "0.0.3",
    "mocha": "2.5.3",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "10.1.2",
    "sinon": "1.17.7"
  },
  "dependencies": {
    "async": "^2.1.5",
    "chalk": "1.1.3",
    "esprima": "3.1.3",
    "extend": "3.0.0",
    "fs-extra": "2.0.0",
    "glob": "7.1.1",
    "jsonpath": "0.2.11",
    "minimatch": "3.0.3",
    "node-watch": "0.4.1",
    "request": "2.79.0",
    "underscore": "1.8.3",
    "underscore.string": "3.3.4",
    "yargs": "6.6.0"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0"
  }
}
